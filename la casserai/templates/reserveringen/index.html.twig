{% extends 'base.html.twig' %}

{% block title %}Reserveringen index{% endblock %}

{% block body %}
<div class="container">
    <h1>Reserveringen index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CheckinDate</th>
                <th>CheckoutDate</th>
                <th>Betaalid</th>
                <th>Betaalmethode</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reserveringen in reserveringens %}
            <tr>
                <td>{{ reserveringen.id }}</td>
                <td>{{ reserveringen.checkinDate ? reserveringen.checkinDate|date('Y-m-d') : '' }}</td>
                <td>{{ reserveringen.checkoutDate ? reserveringen.checkoutDate|date('Y-m-d') : '' }}</td>
                <td>{{ reserveringen.betaalid }}</td>
                <td>{{ reserveringen.betaalmethode }}</td>
                <td>
                    <a href="{{ path('reserveringen_show', {'id': reserveringen.id}) }}">show</a>
