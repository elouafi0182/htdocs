{% extends 'base.html.twig' %}

{% block title %}reserveringen index{% endblock %}

{% block body %}
    <h1>reserveringen index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Check in</th>
                <th>Check Out</th>
                <th>User<th>
                <th>Room<th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reserveringen in reserveringen %}
            <tr>
                <td>{{ reserveringen.id }}</td>
                <td>{{ reserveringen.checkin ? reserveringen.checkin|date('Y-m-d') : '' }}</td>
                <td>{{ reserveringen.checkOut ? reserveringen.checkOut|date('Y-m-d') : '' }}</td>
                <td>{{ reserveringen.user }}</td>
                <td>{{ reserveringen.kamer }}</td>
                <td>
                    <a href="{{ path('reserveringen_show', {'id': reserveringen.id}) }}">show</a>
                    <a href="{{ path('reserveringen_edit', {'id': reserveringen.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('reserveringen_new') }}">Create new</a>
{% endblock %}