{% extends 'base.html.twig' %}

{% block title %}Reaction index{% endblock %}

{% block body %}
    <h1>Reaction index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>Postdate</th>
                <th>Editdate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reaction in reactions %}
            <tr>
                <td>{{ reaction.id }}</td>
                <td>{{ reaction.content }}</td>
                <td>{{ reaction.postdate ? reaction.postdate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reaction.editdate ? reaction.editdate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('reaction_show', {'id': reaction.id}) }}">show</a>
                    <a href="{{ path('reaction_edit', {'id': reaction.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('reaction_new') }}">Create new</a>
{% endblock %}
